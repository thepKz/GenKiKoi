{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "steps_file.ts",
    "codecept.conf.ts",
    "types/**/*.d.ts"
  ]
}